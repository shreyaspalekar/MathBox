<android.support.v4.widget.DrawerLayout
		   xmlns:android="http://schemas.android.com/apk/res/android"
		   android:id="@+id/drawer_layout"
		   android:layout_width="match_parent"
		   android:layout_height="match_parent">

	<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/mainLayout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="fill"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".MathBoxActivity" >


	    <android.gesture.GestureOverlayView
	        android:id="@+id/gestureOverlayView1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gestureColor="#ff000000"
	        android:gestureStrokeType="multiple"
	        android:orientation="horizontal">
	    </android.gesture.GestureOverlayView>

	    <TextView
            android:id="@+id/exprTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />

        <ImageButton
            android:id="@+id/deleteButton1"
            android:contentDescription="Clear screen"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trash_icon_black" 
            android:background="@null"
            android:paddingRight="15dp"
            android:paddingLeft="15dp" />
        <ImageButton
            android:id="@+id/checkMarkButton1"
            android:contentDescription="Evaluate"
            android:layout_toLeftOf="@+id/deleteButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/checkmark_icon" 
            android:background="@null"
            android:paddingRight="15dp"
            android:paddingLeft="15dp" />
        <ImageButton
            android:id="@+id/backspaceButton1"
            android:contentDescription="Backspace"
            android:layout_toLeftOf="@+id/checkMarkButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_icon" 
            android:background="@null"
            android:paddingRight="15dp"
            android:paddingLeft="15dp" />
<!-- -->
	</RelativeLayout>
 
	<!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>